<div class="container">
	<h1>Edit Note</h1>
  <form action="/notes/<%=@note.id%>" method="POST">
    	<input type="hidden" name="_method" value="put" />

			<label>Title: <input type="text" name="title" value=<%=@note.title%>>
			</label><br><br>

			<label>Content: <textarea rows="5" cols="30" name="content"><%=@note.content%></textarea>
			</label><br><br>

		<input type="submit" value="Submit">
	</form>
</div>


